<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.collections.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" 
      prefHeight="450.0" prefWidth="600.0"
      fx:controller="com.visualsemester.gui.TaskEditController"
      stylesheets="@/com/visualsemester/gui/styles.css"
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
      
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <children>
        <!-- Title Section -->
        <HBox alignment="CENTER" prefHeight="70.0" prefWidth="100.0">
            <children>
                <Label text="Edit Task" styleClass="title">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
            </children>
        </HBox>
        
        <!-- Task Name Field -->
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <Label text="Task Name:" styleClass="edit-label" minWidth="80.0"/>
                <TextField fx:id="taskNameField" prefWidth="300.0"/>
            </children>
        </HBox>
        
        <!-- Class Field -->
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <Label text="Class:" styleClass="edit-label" minWidth="80.0"/>
                <ComboBox fx:id="editClassComboBox" prefWidth="120.0"/>
            </children>
        </HBox>
        
        <!-- Due Date Picker -->
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <Label text="Due Date:" styleClass="edit-label" minWidth="80.0"/>
                <DatePicker fx:id="dueDatePicker" prefWidth="300.0"/>
            </children>
        </HBox>
        
        <!-- Task Type ComboBox -->
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <Label text="Task Type:" styleClass="edit-label" minWidth="80.0"/>
                <ComboBox fx:id="taskTypeComboBox" prefWidth="100.0"/>
            </children>
        </HBox>
        
        <!-- Reminder Section -->
        <VBox spacing="5.0">
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <children>
                    <Label text="Set Reminder:" styleClass="edit-label" minWidth="80.0"/>
                    <CheckBox fx:id="reminderCheckbox" text="Enable Reminder"/>
                </children>
            </HBox>
            
            <HBox alignment="CENTER_LEFT" spacing="5.0" fx:id="reminderTimeContainer" visible="false">
                <padding>
                    <Insets left="90.0"/>
                </padding>
                <children>
                    <Label text="Date:" styleClass="edit-label" minWidth="40.0"/>
                    <DatePicker fx:id="reminderDatePicker" prefWidth="120.0"/>
                    
                    <Label text="Time:" styleClass="edit-label" minWidth="40.0"/>
                    <HBox spacing="2.0" alignment="CENTER">
                        <ComboBox fx:id="reminderHourCombo" prefWidth="60.0"/>
                        <Label text=":" styleClass="time-separator"/>
                        <ComboBox fx:id="reminderMinuteCombo" prefWidth="60.0"/>
                        <Button fx:id="toggleAmPmButton" text="AM" styleClass="am-pm-button"/>
                    </HBox>
                </children>
            </HBox>
        </VBox>
        
        <!-- Button Panel -->
        <HBox alignment="CENTER" spacing="20.0" styleClass="button-panel">
            <children>
                <Button onAction="#handleBack" text="Back" styleClass="button" prefWidth="80.0"/>
                <Button onAction="#handleSaveEdits" text="Save" styleClass="button" prefWidth="80.0"/>
                <Button onAction="#handleUndoChanges" text="Undo" styleClass="button" prefWidth="80.0"/>
            </children>
            <padding>
                <Insets top="20.0"/>
            </padding>
        </HBox>
    </children>
</VBox>